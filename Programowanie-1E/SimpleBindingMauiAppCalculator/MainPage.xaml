<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleBindingMauiAppCalculator.MainPage"
             x:Name="thisPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Podaj pierwsza Liczbe szybciutko po proszę!"
                   FontSize="30"/>
            <Entry Text="{Binding FirstNumber,Source={x:Reference thisPage}}"/>
            <Label Text="Podaj druga!!!!!!!!"
                   FontSize="30"/>
            <Entry Text="{Binding SecondNumber,Source={x:Reference thisPage}}"/>
            <Button Text="Licz" 
                    Clicked="Button_Clicked"/>
            <Label Text="{Binding Result,Source={x:Reference thisPage}}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
