<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgzaminGraWKosci.MainPage"
             x:Name="thisPage"
             BindingContext="{x:Reference thisPage}"
             xmlns:coverters="clr-namespace:EgzaminGraWKosci.Converter">
    
    <ContentPage.Resources>
        <coverters:FromNumberToString x:Key="FromNumberToString"/>
    </ContentPage.Resources>
    
    <ScrollView Background="Beige">
        <VerticalStackLayout>
            <Label
                Text="Gra w kości. "
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                />

            <Button Text="Rzuć kościami" Clicked="Button_Clicked"/>

            <FlexLayout
                Wrap="Wrap"
                BindableLayout.ItemsSource="{Binding ResultOfThrows}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Converter={x:StaticResource FromNumberToString}}"/>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>                
            </FlexLayout>


            <Label Text="{Binding SumOfAll, StringFormat='Wynik wszystkich rzutów: {0}'}"/>
            <Label Text="{Binding ResultOfCurrentThrow, StringFormat='Wynik rzutu: {0}'}"/>
            <Button Text="Resetuj wynik" Clicked="Button_Clicked_1"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 
